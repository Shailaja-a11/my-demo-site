<body>
  <h1>Demo Store</h1>
  <p>Welcome to my practice store! Click a product to simulate a purchase.</p>

  <ul>
    <li data-product="A">Product A — $10</li>
    <li data-product="B">Product B — $15</li>
    <li data-product="C">Product C — $8</li>
  </ul>

  <!-- Example GA4 snippet (optional, if you set up GA) -->
  <!-- 
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-MEASUREMENT_ID"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-MEASUREMENT_ID');
  </script>
  -->

  <script>
    // Simple demo: clicking a product simulates a "purchase"
    function simulatePurchase(product) {
      console.log('Purchase:', product);
      alert('You simulated a purchase of ' + product);
      // if GA4 is connected: gtag('event', 'purchase', { item: product });
    }

    document.querySelectorAll('[data-product]').forEach(el => {
      el.style.cursor = 'pointer';
      el.onclick = () => simulatePurchase(el.dataset.product);
    });
  </script>
</body>
